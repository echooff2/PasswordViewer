{
  "manifest_version": 2,
	
	"default_locale": "en",
  "name": "Password Viewer",
  "description": " __MSG_description__",
  "version": "1.0",
  
 
	"background": {
		"scripts": ["eventPage.js"],
		"persistent": false
	},
 
  "permissions": [
	"contextMenus",
	"activeTab",
	"storage"
  ],
  "content_scripts": [
	{
		"matches": ["<all_urls>"],
		"js": ["contentScript.js"]
	}
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
} 